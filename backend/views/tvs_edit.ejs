<% layout('layout/page') -%>
<% block('title', 'Редактирование ТВ экрана'); -%>
<section class="container">

    <div class="bs-docs-section clearfix">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-header">

                    <h1>Редактирование ТВ Экрана</h1>
                </div>

                <form method="post" id="places-edit" action="/tvs/<%= tvs._id %>?_method=put">
                    <input type='hidden' name='id' class="id" value='<%= tvs._id %>'/>
                    <div class="form-group">
                        Локация:<br>
                        <input type='text' name='tv_place' class='form-control fu-place' value='<%= tvs.place %>'/>
                    </div>
                    <div class="form-group">
                        Номер экрана: <br>
                        <input type='text' name='tv_number' class='form-control' value='<%= tvs.number %>'/>
                    </div>
                    <div class="form-group">
                        Номер канала: <br>
                        <input type='text' name='tv_channel' class='form-control' value='<%= tvs.channel %>'/>
                    </div>
                    <div class="form-group">
                        Активность (1 или 0): <br>
                        <input type='text' name='tv_isactive' class='form-control' value='<%= tvs.isactive %>'/>
                    </div>
                    <input type='submit' value='Сохранить' class='btn btn-primary'>
                </form>
            </div>
        </div>
    </div>

</section>
