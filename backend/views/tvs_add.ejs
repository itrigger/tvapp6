<% layout('layout/page') -%>
<% block('title', 'Добавление ТВ экрана'); -%>
<section class="container">

    <div class="bs-docs-section clearfix">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-header">
                    <h1>Добавление нового экрана</h1>
                </div>
                <form method="post" id="tvs-add" action="/tvs">
                    <div class="form-group">
                        Локация:<br>
                        <input type='text' name='tv_place' class='form-control fu-place' value=''/>
                    </div>
                    <div class="form-group">
                        Номер экрана: <br>
                        <input type='text' name='tv_num' class='form-control' value=''/>
                    </div>
                    <div class="form-group">
                        Номер канала: <br>
                        <input type='text' name='tv_channel' class='form-control' value=''/>
                    </div>
                    <input type='submit' value='Сохранить' class='btn btn-primary'>
                </form>
            </div>
        </div>
    </div>
</section>
