<% layout('layout/page') -%>
<% block('title', 'Добавление нового слайда'); -%>
<section class="container">
    <div class="bs-docs-section clearfix">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-header">
                    <h1>Добавление нового слайда</h1>
                </div>

                <form method="post" id="slide-edit" action="/slides">
                    <div class="form-group">
                        Локация:<br>
                        <input type='text' name='place' class='form-control fu-place' value=''/>
                    </div>
                    <div class="form-group">
                        Номер экрана: <br>
                        <input type='text' name='screen_num' class='form-control' value=''/>
                    </div>
                    <div class="form-group">
                        Номер слайда: <br>
                        <input type='text' name='slide_num' class='form-control' value=''/>
                    </div>
                    <div class="form-group">
                        Активен (1 или 0): <br>
                        <input type='text' name='isactive' class='form-control' value=''/>
                    </div>
                    <div class="form-group">
                        Контент слайда: <br>
                        <textarea type='slide_num' name='slide_content' class='form-control'></textarea>
                    </div>
                    <input type='submit' value='Сохранить' class='btn btn-primary'>
                </form>
            </div>
        </div>
    </div>

</section>