<% layout('layout/page') -%>
<% block('title', 'Редактирование слайда(экрана)'); -%>
<section class="container">
    <div class="bs-docs-section clearfix">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-header">
                    <h1>Редактирование слайда</h1>
                </div>
                <form method="post" id="slide-edit" action="/slides/<%= slides._id %>?_method=put">
                    <input type='hidden' name='id' class="id" value='<%= slides._id %>'/>
                    <div class="form-group">
                        Локация:<br>
                        <input type='text' name='place' class='form-control fu-place' value='<%= slides.place %>'/>
                    </div>
                    <div class="form-group">
                        Номер экрана: <br>
                        <input type='text' name='screen_num' class='form-control' value='<%= slides.screen_num %>'/>
                    </div>
                    <div class="form-group">
                        Номер слайда: <br>
                        <input type='text' name='slide_num' class='form-control' value='<%= slides.slide_num %>'/>
                    </div>
                    <div class="form-group">
                        Активен (1 или 0): <br>
                        <input type='text' name='isactive' class='form-control' value='<%= slides.isactive %>'/>
                    </div>
                    <div class="form-group">
                        Контент слайда: <br>
                        <textarea type='slide_num' name='slide_content'
                                  class='form-control'><%- slides.slide_content %></textarea>
                    </div>
                    <input type='submit' value='Сохранить' class='btn btn-primary'>
                </form>
            </div>
        </div>
    </div>
</section>
