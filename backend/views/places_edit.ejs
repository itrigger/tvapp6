<% layout('layout/page') -%>
<% block('title', 'Редактирование точки'); -%>
<section class="container">

    <div class="bs-docs-section clearfix">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-header">

                    <h1>Редактирование точки</h1>
                </div>

                <form method="post" id="places-edit" action="/places/<%= place._id %>?_method=put">
                    <input type='hidden' name='id' class="id" value='<%= place._id %>'/>
                    <div class="form-group">
                        Название:<br>
                        <input type='text' name='loc_name' class='form-control fu-place' value='<%= place.name %>'/>
                    </div>
                    <div class="form-group">
                        Описание: <br>
                        <input type='text' name='loc_desc' class='form-control' value='<%= place.description %>'/>
                    </div>
                    <div class="form-group">
                        Активность: <br>
                        <input type='text' name='loc_isactive' class='form-control' value='<%= place.isactive %>'/>
                    </div>
                    <input type='submit' value='Сохранить' class='btn btn-primary'>
                </form>
            </div>
        </div>
    </div>

</section>
